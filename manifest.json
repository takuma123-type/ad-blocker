{
  "manifest_version": 3,
  "name": "Simple Ad Blocker",
  "version": "1.0",
  "description": "A simple ad blocker extension.",
  "permissions": ["declarativeNetRequest"],
  "host_permissions": ["*://*/*"],
  "action": {
    "default_icon": {
      "48": "images/icon.png"
    },
    "default_popup": "popup.html"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "path": "rules/ruleset.json",
        "enabled": true
      }
    ]
  }
}
